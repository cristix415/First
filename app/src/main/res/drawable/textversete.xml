<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        item
            Defines a drawable to place in the layer drawable, in a position defined
            by its attributes.

            android:top
                Integer. The top offset in pixels.
            android:right
                Integer. The right offset in pixels.
            android:bottom
                Integer. The bottom offset in pixels.
            android:left
                Integer. The left offset in pixels.
    -->
    <item android:bottom="10dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <stroke android:width="1dp" android:color="#B0BEC5" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>

</selector>